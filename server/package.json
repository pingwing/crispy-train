{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "codegen": "echo 'Generating GraphQL schema...' && graphql-codegen --config codegen.ts",
    "dev": "nodemon --watch src --ext ts,graphql --exec ts-node src/index.ts",
    "typecheck": "echo 'Running typecheck...' && tsc -p tsconfig.test.json",
    "build:emit": "echo 'Building...' && tsc -p tsconfig.json && node scripts/copy-schema.mjs",
    "build": "npm run codegen && npm run build:emit",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "mikro-orm": "mikro-orm",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "migration:create": "mikro-orm migration:create",
    "seed": "echo 'Creating initial seed DB data...' && npm run build && node dist/db/seed/runSeed.js",
    "test": "npm run typecheck && echo 'Running tests...' && tsx --test $(find test -name '*.test.ts' -print)",
    "coverage": "npm run typecheck && echo 'Running coverage...' && c8 tsx --test $(find test -name '*.test.ts' -print)"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-tools/schema": "^10.0.30",
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/migrations": "^6.6.2",
    "@mikro-orm/postgresql": "^6.6.2",
    "@mikro-orm/reflection": "^6.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.6",
    "@graphql-codegen/typescript-resolvers": "^5.1.4",
    "@mikro-orm/cli": "^6.6.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "c8": "^10.1.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
